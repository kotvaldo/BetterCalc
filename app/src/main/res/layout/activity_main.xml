<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.BetterCalc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonNumber0"
            style="@style/Button.Classic"
            android:layout_width="100dp"
            android:layout_height="74dp"
            android:text="@string/stringNumber0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonNumber00"
            style="@style/Button.Classic"
            android:layout_marginBottom="4dp"
            android:text="@string/stringNumber00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.386"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/Button.Classic"
            android:layout_marginBottom="4dp"
            android:text="@string/stringDot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.766"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonEquals"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="74dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/orange"
            android:text="@string/stringEquals"
            android:textColor="@color/white"
            android:textColorHighlight="#F87400"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonNumber1"
            style="@style/Button.Classic"
            android:text="@string/stringNumberOne"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonNumber2"
            style="@style/Button.Classic"
            android:text="@string/stringNumberTwo"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonNumber3"
            style="@style/Button.Classic"
            android:text="@string/stringNumber3"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonPlus"
            style="@style/Button.Orange"
            android:text="@string/stringPlus"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonNumber4"
            style="@style/Button.Classic"
            android:text="@string/stringNumber4"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonNumber5"
            style="@style/Button.Classic"
            android:text="@string/stringNumber5"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonNumber6"
            style="@style/Button.Classic"
            android:text="@string/stringNumber6"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonMinus"
            style="@style/Button.Orange"
            android:text="@string/stringMinus"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonNumber7"
            style="@style/Button.Classic"
            android:text="@string/stringNumber7"
            android:textColorHighlight="#985A5A"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonNumber8"
            style="@style/Button.Classic"
            android:text="@string/stringNumber8"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonNumber9"
            style="@style/Button.Classic"
            android:text="@string/stringNumber9"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonMult"
            style="@style/Button.Orange"
            android:text="@string/stringMul"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonClear"
            style="@style/Button.Orange"
            android:text="@string/stringAC"
            android:textColorHighlight="#985A5A"
            tools:layout_editor_absoluteY="570dp" />

        <ImageButton
            android:id="@+id/buttonBackspace"
            style="@style/Button.Classic"
            android:importantForAccessibility="no"
            android:src="@drawable/backspace"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonPerc"
            style="@style/Button.Orange"
            android:text="@string/stringPer"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonDiv"
            style="@style/Button.Orange"
            android:text="@string/stringDiv"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonParentLeft"
            style="@style/Button.Higher"
            android:text="@string/stringParentLeft"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonParentRight"
            style="@style/Button.Higher"
            android:text="@string/stringParentRight"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <Button
            android:id="@+id/buttonPower"
            style="@style/Button.Higher"
            android:text="@string/stringPower"
            android:textColorHighlight="#6C4DA3"
            tools:layout_editor_absoluteY="570dp" />

        <ImageButton
            android:id="@+id/buttonBackwards"
            style="@style/Button.Image"
            android:layout_height="50dp"
            android:contentDescription="@string/backwards"
            android:src="@drawable/backwards"
            android:visibility="invisible"
            tools:layout_editor_absoluteY="570dp" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449" />

    <TextView
        android:id="@+id/fullTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/resultView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>