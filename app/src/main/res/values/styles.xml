<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Classic" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/Theme.AppCompat.DayNight.NoActionBar</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Orange" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Parent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:colorBackground">@color/orange</item>
        <item name="backgroundColor">@color/orange</item>
        <item name="android:backgroundTint">@color/orange</item>

    </style>

    <style name="Button.Image" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="Button.Higher" parent="Widget.AppCompat.Button.Borderless" >

        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:colorBackground">@color/orange</item>
        <item name="backgroundColor">@color/orange</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>


</resources>